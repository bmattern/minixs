#!/usr/bin/env python
import minixs as mx
import sys

usage = "Usage: %s <.xes filename(s)>" % sys.argv[0]

if len(sys.argv) < 2:
  print usage
  exit(1)

filenames = sys.argv[1:]
for filename in filenames:
  print "Loading %s..." % filename
  xes = mx.emission.load(filename)
  if xes.load_errors:
    print "Unable to load .xes file:"
    print '\n'.join(xes.load_errors)
    continue

  print "  Reprocessing..."
  xes.process()
  print "  Saving..."
  xes.save()
  print "Done"

